<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/txtGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1976D2"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="40dp"
        android:text="GroupName" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp">
        <Button
            android:id="@+id/btnDeleteGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:paddingHorizontal="10dp"
            android:background="@drawable/button_rectangle_green_3"
            android:text="Delete this group" />
    <TextView
        android:id="@+id/txtCreatedTime"
        android:drawableRight="@drawable/ic_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:textSize="25dp"
        android:text="Created Time" />

    </GridLayout>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:text="Description"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_description"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView8"
        android:drawableLeft="@drawable/ic_user_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:text="Member List" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wgRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:clipToPadding="false"/>
</LinearLayout>